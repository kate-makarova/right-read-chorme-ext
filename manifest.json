{
  "name": "Right read",
  "version": "1.0",
  "description": "A Chrome extension for rightread.ca.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Right Read",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["thirdParty/jquery-3.5.1.min.js"]
    }
  ],
  "manifest_version": 2
}